{
  "name": "purecloud-webrtc-sdk",
  "version": "1.1.12",
  "description": "client for the interfacing with PureCloud WebRTC",
  "repository": "https://github.com/mypurecloud/purecloud-webrtc-sdk",
  "license": "MIT",
  "main": "src/client.js",
  "browser": "web/purecloud-webrtc-sdk.js",
  "files": [
    "src",
    "web/purecloud-webrtc-sdk.js"
  ],
  "pre-push": [
    "test"
  ],
  "scripts": {
    "build": "npx webpack",
    "build-sample": "./test/test-pages/build.sh",
    "unit-test": "NODE_ENV=test nyc ava test/unit/*.js",
    "pretest": "npm run build",
    "start": "stupid-server -s -p 8443",
    "test": "npm run semistandard && npm run unit-test",
    "watch-tests": "watch 'npm test' src test",
    "semistandard": "semistandard",
    "semistandard:fix": "semistandard --fix"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "semistandard": {
    "ignore": [
      "/.nyc_output",
      "/coverage",
      "/scripts",
      "/test/test-pages/sdk-sample.js"
    ]
  },
  "babel": {
    "presets": [
      "env"
    ],
    "env": {
      "test": {
        "plugins": "istanbul"
      },
      "production": {
        "plugins": []
      }
    }
  },
  "ava": {
    "files": [],
    "concurrency": 5,
    "failFast": true,
    "failWithoutAssertions": false,
    "powerAssert": true,
    "require": [
      "babel-register"
    ]
  },
  "author": "",
  "dependencies": {
    "backoff-web": "^1.0.1",
    "purecloud-platform-client-v2": "^28.0.0",
    "safe-json-stringify": "^1.2.0",
    "stupid-server": "^0.2.2",
    "superagent": "^3.8.3",
    "uuid": "^3.3.2",
    "webpack-auto-inject-version": "^1.2.2",
    "webrtc-stats-gatherer": "^6.0.4",
    "wildemitter": "^1.2.0"
  },
  "devDependencies": {
    "ava": "^0.20.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-istanbul": "^4.1.6",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.3",
    "gulp": "^4.0.0",
    "gulp-uglify": "^3.0.1",
    "gulp-util": "^3.0.8",
    "nock": "^9.3.0",
    "nyc": "^11.1.0",
    "semistandard": "^12.0.1",
    "sinon": "^7.1.1",
    "uglify-js": "^3.4.6",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watch": "^1.0.2",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.4"
  },
  "false": {}
}
